{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "cities": {
            "description": "Array of cities objects",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "streets": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "buildings": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "number": {
                                                "type": "integer"
                                            },
                                            "data": {
                                                "type": "object"
                                            }
                                        },
                                        "required": [ "number", "data" ]
                                    }
                                }
                            },
                            "required": [ "name", "buildings" ],
                            "minItems": 1
                        }
                    }
                },
                "required": [ "name", "streets" ],
                "minItems": 1
            }
        },
        "reports": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "services": {
                        "type": "object",
                        "properties": {
                            "ambulance": {
                                "type": "object",
                                "properties": {
                                    "requested": {
                                        "type": "boolean"
                                    },
                                    "quantity": {
                                        "type": "integer"
                                    },
                                    "state": {
                                        "type": ["string", "null"]
                                    }
                                },
                                "required": [ "requested", "quantity", "state" ]
                            },
                            "police": {
                                "type": "object",
                                "properties": {
                                    "requested": {
                                        "type": "boolean"
                                    },
                                    "quantity": {
                                        "type": "integer"
                                    },
                                    "state": {
                                        "type": ["string", "null"]
                                    }
                                },
                                "required": [ "requested", "quantity", "state" ]
                            },
                            "fireFighters": {
                                "type": "object",
                                "properties": {
                                    "requested": {
                                        "type": "boolean"
                                    },
                                    "quantity": {
                                        "type": "integer"
                                    },
                                    "state": {
                                        "type": ["string", "null"]
                                    }
                                },
                                "required": [ "requested", "quantity", "state" ]
                            }
                        },
                        "required": [ "ambulance", "police", "fireFighters" ],
                        "minProperties": 3,
                        "maxProperties": 3
                    },
                    "data": {
                        "type": "object",
                        "properties": {
                            "city": {
                                "type": "string"
                            },
                            "street": {
                                "type": "string"
                            },
                            "building": {
                                "type": "integer"
                            }
                        },
                        "required": [ "city", "street", "building" ],
                        "minProperties": 3,
                        "maxProperties": 3
                    }
                }
            },
             "required": [ "services", "data" ]
        }
    },
    "required": [ "cities", "reports" ]
}